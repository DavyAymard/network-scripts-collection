#!/usr/bin/env python3
"""
inventory_local.py
Script simple pour collecter des informations sur la machine locale.
"""

import platform
import psutil

def system_inventory():
    print("=== INVENTAIRE LOCAL ===")
    print(f"Système d'exploitation : {platform.system()} {platform.release()}")
    print(f"Architecture : {platform.machine()}")
    print(f"Processeur : {platform.processor()}")
    print(f"Nombre de cœurs : {psutil.cpu_count(logical=True)}")
    print(f"Mémoire totale : {round(psutil.virtual_memory().total / (1024**3), 2)} Go")

if __name__ == "__main__":
    system_inventory()